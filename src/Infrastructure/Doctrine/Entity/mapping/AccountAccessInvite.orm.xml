<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity repository-class="App\Infrastructure\Doctrine\Repository\AccountAccessInviteRepository"
            name="App\Domain\Entity\AccountAccessInvite" table="account_access_invites">
        <id name="account" association-key="true"/>
        <id name="recipient" association-key="true"/>

        <field name="role" type="account_user_role_type" column="role" nullable="false"/>
        <field name="code" type="string" column="code" length="5" nullable="false">
            <options>
                <option name="fixed">true</option>
            </options>
        </field>
        <field name="createdAt" type="datetime_immutable" column="created_at" nullable="false"/>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="false"/>

        <many-to-one field="account" target-entity="App\Domain\Entity\Account">
            <join-column name="account_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <many-to-one field="recipient" target-entity="App\Domain\Entity\User">
            <join-column name="recipient_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <many-to-one field="owner" target-entity="App\Domain\Entity\User">
            <join-column name="owner_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
