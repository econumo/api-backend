<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="App\Infrastructure\Doctrine\Repository\CurrencyRepository"
            name="App\Domain\Entity\Currency" table="currencies">
        <id name="id" type="uuid" column="id"/>
        <field name="alias" type="string" column="alias" length="32" unique="true" nullable="false"/>
        <field name="sign" type="string" column="sign" length="32" nullable="false"/>
        <field name="createdAt" type="datetime_immutable" column="created_at" nullable="false"/>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="false"/>
    </entity>
</doctrine-mapping>
